@model TestAPP.Models.Employee
<div class="card-deck">
          <div class="row justify-content-center m-3">
            <div class="col-sm-8">
                <div class="card" style="width: 400px;">
                    <div class="card-header">
                        <h1>@Model.Id</h1>
                    </div>

                    <div class="card-body text-center">
                        <img class="card-img-top" src="data:image;base64,@System.Convert.ToBase64String(Model.photo)" width="100" height="300" />
                        <h4>Employee ID : @Model.Name</h4>
                        <h4>Email : @Model.Email</h4>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-primary" asp-controller="Home" asp-action="update" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="details" asp-route-id="@Model.Id">Details</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="delete" asp-route-id="@Model.Id">Delete</a>

                    </div>
                </div>
            </div>
        </div>
  
</div>